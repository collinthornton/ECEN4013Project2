#ifndef UART_H_
#define UART_H_

#include "stm32f7xx_hal.h"

#include <map>


class UART {
public:
	UART();
	int init(USART_TypeDef *port, int baud, int packetSize_Bytes);
	bool isData();
	short sendData(uint8_t *data, int timeout=10);
	uint8_t& getData();
	void memberIRQ(uint8_t *data);
	virtual ~UART();

	static std::map<UART_HandleTypeDef*, UART*> objectMap;

private:
	static void irq(UART_HandleTypeDef *huart);

	uint8_t *buff;;
	UART_HandleTypeDef handle;
	bool dataReady;
};


#endif /* UART_H_ */
